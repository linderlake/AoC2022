{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: debug aochelper",
      "command": "/usr/bin/g++",
      "args": [
        "main.cc",
        "AoCHelper.cc",
        "-std=c++17",
        "-Iinclude",
        "-Llib",
        "-lcurl",
        "-lcurlpp",
        "-fdiagnostics-color=always",
        "-g",
        "-o",
        "${fileDirname}/main.out"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "cppbuild",
      "label": "C/C++: debug current AoC puzzle",
      "command": "/usr/bin/g++",
      "args": [
        "${fileBasename}",
        "../AoCHelper/AoCHelper.cc",
        "-std=c++17",
        "-Iinclude",
        "-Llib",
        "-lcurl",
        "-lcurlpp",
        "-fdiagnostics-color=always",
        "-g",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "Generate boilerplate code.",
      "command": "${workspaceFolder}/AoCHelper/boilerplate_code_generator.sh",
      "args": ["${workspaceFolder}", "${input:dayName}"]
    }
  ],

  "version": "2.0.0",
  "inputs": [
    {
      "id": "dayName",
      "type": "promptString",
      "description": "Day number, please:",
      "default": "1"
    }
  ]
}
